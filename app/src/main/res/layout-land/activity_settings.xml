<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tile_cutout"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@android:color/transparent"
            >

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:textAlignment="center"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_left_vector"
                app:navigationIconTint="@color/onSurface"
                app:title="@string/settings" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@color/surfaceContainer"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:id="@+id/theme_selection_holder"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/settingstile_top"
                    android:backgroundTint="@color/surfaceBright"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/onPrimaryContainer"
                        android:text="@string/theme"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/theme_selection_value"
                        android:layout_width="wrap_content"
                        android:textColor="@color/onPrimaryContainer"
                        android:layout_height="wrap_content"
                        android:text="System"
                        tools:ignore="HardcodedText,TextContrastCheck"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:alpha="0.6"/>

                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/amoled_dark_switch"
                    android:textColor="@color/onPrimaryContainer"
                    android:backgroundTint="@color/surfaceBright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/amoled"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/settingstile_bottom"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="24dp"/>

                <LinearLayout
                    android:id="@+id/language_selection_holder"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/settingstile"
                    android:backgroundTint="@color/surfaceBright"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SettingsSelectionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/onPrimaryContainer"
                        android:text="@string/language"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/language_selection_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/onPrimaryContainer"
                        android:text="English"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:alpha="0.6"/>

                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/release_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/onPrimaryContainer"
                    android:text="@string/prerelease"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/settingstile_top"
                    android:backgroundTint="@color/surfaceBright"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="24dp"/>

                <LinearLayout
                    android:id="@+id/clear_button_holder"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/settingstile_middle"
                    android:backgroundTint="@color/surfaceBright"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/onPrimaryContainer"
                        android:layout_height="wrap_content"
                        android:text="@string/clear_data"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/about_holder"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/settingstile_bottom"
                    android:backgroundTint="@color/surfaceBright"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/onPrimaryContainer"
                        android:text="@string/about"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/about_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/onPrimaryContainer"
                        android:text="Version"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:alpha="0.6"/>

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>