<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="icons">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="cardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/tile_popup</item>
        <item name="backgroundTint">@color/secondaryContainer</item>
        <item name="android:clipToOutline">true</item>
        <item name="elevation">0dp</item>
        <item name="android:outlineAmbientShadowColor">@color/transparent</item>
        <item name="android:outlineSpotShadowColor">@color/transparent</item>
        <item name="cardCornerRadius">25dp</item>
    </style>

    <style name="progressbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:visibility">gone</item>
        <item name="indicatorColor">@color/onPrimary</item>
        <item name="trackColor">@color/transparent</item>
        <item name="trackCornerRadius">50dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="trackThickness">10dp</item>
        <item name="trackStopIndicatorSize">0dp</item>
    </style>

    <dimen name="settings_tile_margin">22dp</dimen>

    <style name="SettingsTitle">
        <item name="android:paddingStart">@dimen/border_margin</item>
        <item name="android:paddingTop">@dimen/border_margin</item>
        <item name="android:paddingEnd">@dimen/border_margin</item>
        <item name="android:paddingBottom">@dimen/border_margin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsTile">
        <item name="android:paddingStart">@dimen/border_margin</item>
        <item name="android:paddingEnd">@dimen/border_margin</item>
        <item name="android:paddingBottom">@dimen/border_margin</item>
    </style>

    <style name="SettingsSelectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="SettingsSelectionValue">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.6</item>
    </style>

</resources>