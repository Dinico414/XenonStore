<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_button_small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="@drawable/tile_background_100"
    android:backgroundTint="@color/tertiary"
    app:layout_anchor="@+id/toolbar"
    app:layout_anchorGravity="center"
    tools:ignore="MissingConstraints">


    <ImageButton
        android:id="@+id/download_1_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/update"
        android:src="@drawable/download_24"
        android:visibility="gone"
        app:tint="@color/onTertiary"
        tools:ignore="DuplicateSpeakableTextCheck,VisualLintButtonSize,TouchTargetSizeCheck"
        tools:visibility="visible" />

<com.google.android.material.progressindicator.CircularProgressIndicator
    android:id="@+id/progressbar_1_circle"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_gravity="center"
    app:trackColor="@color/transparent"
    app:trackThickness="5dp"
    android:visibility="gone"
    app:indicatorColor="@color/onTertiary"
    tools:visibility="visible" />

</FrameLayout>
