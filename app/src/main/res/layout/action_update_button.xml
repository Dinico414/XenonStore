<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_button_small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:padding="4dp"
    android:visibility="gone"
    tools:visibility="visible"
    tools:ignore="MissingConstraints">


    <ImageButton
        android:id="@+id/download_1_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:contentDescription="@string/update"
        android:background="@drawable/tile_background_100"
        android:backgroundTint="@color/tertiary"
        android:src="@drawable/download_24"
        app:tint="@color/onTertiary"
        tools:ignore="DuplicateSpeakableTextCheck,VisualLintButtonSize,TouchTargetSizeCheck"
        tools:visibility="visible" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressbar_1_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="visible"
        app:indicatorColor="@color/onTertiary"
        app:indicatorSize="26dp"
        app:trackColor="@color/transparent"
        app:trackThickness="4dp"
        tools:visibility="visible" />

</FrameLayout>
